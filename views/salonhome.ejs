<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- link for navbar icon -->
    <link rel="icon" href="./Img/scissors-cut-cutlery-cutter-fork-knife-sizer-icon-18-B1.png">

    <!-- link for stylesheet -->
    <link rel="stylesheet" type="text/css" href="/css/editsalon.css">

    <!-- link for fontawesome -->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">

    <!-- link for font -->
    <link href="https://fonts.googleapis.com/css?family=Stoke|Titillium+Web&display=swap" rel="stylesheet">

    <!-- for Animation on scroll -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <title>Home | LookBooker</title>

</head>
<body>
    <header>
        <div class="hero">
            <nav >
                <div class="logo">
                    <img src="/Img/icon.png" alt="sesor">
                </div>
                <div class="nav-item">
                    <ul>
                        <li><a href="/<%=user.id %>/salonhome">Home</a></li>
                        <li><a href="/logout">Sign Out</a></li>
                        <li><a href='/<%=user.id%>/editsalon' id="profile"><img src='/uploadas/<%=user.imgurl %>'></a></li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    
    <section id="home">
        <%for(let i=0;i<user.slot.length;i++){%>
        <div class="card">
            <div class="img-content">
                <img src="/uploadas/<%= user.slot[i].imgurl%>">
                <p><%= user.slot[i].username %></p>
            </div>
            <div class="content">
                <h4>app-time : <span><%= user.slot[i].app_time %></span></h4>
            </div>
            <div class="bttns">
                <button class="btn-success"><a href='/<%=user.id %>/<%= user.slot[i].id %>/cnf'>confirm</a></button>
                <button class="btn-danger"><a href='/<%=user.id %>/<%= user.slot[i].id %>/cnf'>cancel</a></button>
            </div>
        </div>
        <%}%>
    </section>


</body>
</html>